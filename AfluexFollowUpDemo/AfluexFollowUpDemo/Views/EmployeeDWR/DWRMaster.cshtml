@model AfluexFollowUpDemo.Models.EmployeeDWR
@{
    ViewBag.Title = "EmployeeDWR";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">DWR</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">DWR</li>
            </ol>
        </nav>
    </div>

</div>
<!--end breadcrumb-->
@using (Html.BeginForm("EmployeeDWR", "EmployeeDWR", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{

<div class="row">
    <div class="col-xl-12 mx-auto">

        <div class="card">
            <div class="card-body">
                <div class="border p-4 rounded">
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">Prospect Name <span style="color: red">*</span></label>
                            @Html.DropDownListFor(q => q.Fk_ProcpectId, new SelectList(ViewBag.ddlProspect, "Value", "Text"), new { @class = "form-select", @OnChange = "return OnchangeLead();" })
                           
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Lead<span style="color: red">*</span></label>
                      
                                <span id="spContactEmailID"></span>
                                @Html.DropDownListFor(q => q.Fk_LeadId, new SelectList(ViewBag.ddlLead, "Value", "Text"), new { @class = "form-select", @onchange = "return GetDWRdetails();" })
                                
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Executive Name<span style="color: red">*</span></label>
                            <span id="spFk_ExecutiveId"></span>
                             @Html.DisplayFor(q => q.Fk_ExecutiveId) 
                          
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">Source Name <span style="color: red">*</span></label>
                            <span id="spFk_SourceId"></span>
                            @Html.DisplayFor(q => q.Fk_SourceId)
                        </div>
                        <div class="col-md-4">
                            <label class="form-label"> First Instruction Date <span style="color: red">*</span></label>
                            <span id="spFirstInstructionDate"></span>

                            @Html.DisplayFor(q => q.FirstInstructionDate)
                        </div>
                        <div class="col-md-4">
                            <label for="formFile" class="form-label">
                                Followup Date
                                <span style="color: red">*</span>
                            </label>
                            <span id="spFollowupDate"></span>

                            @Html.DisplayFor(q => q.FollowupDate)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">Mode Of InterAction<span style="color: red">*</span></label>
                            @Html.DropDownListFor(q => q.Fk_ModeInterActionId, new SelectList(ViewBag.ddlInterAction, "Value", "Text"), new { @class = "form-control" })
                        </div>
                        <div class="col-md-4">
                            <label class="form-label"> Business Chance<span style="color: red">*</span></label>
                          @Html.DropDownListFor(q => q.Fk_BusinessChanceId, new SelectList(ViewBag.ddlChance, "Value", "Text"), new { @class = "form-control" })
                        </div>
                        <div class="col-md-4">
                            <label for="formFile" class="form-label">
                                Next Followup date <span style="color: red">*</span>
                            </label>
                            @Html.HiddenFor(m => m.Pk_DwrId)

                            @Html.TextBoxFor(f => f.NextFollowupDate, new { @class = "form-control form-control-lg mydatepicker", @Placeholder = "Next Followup Date", @ReadOnly = "ReadOnly" })
                        </div>
                        <div class="col-md-4">
                            <label for="formFile" class="form-label">
                                Submitted By Name <span style="color: red">*</span>
                            </label>
                            @Html.DropDownListFor(q => q.Fk_ExecutiveId, new SelectList(ViewBag.ddlName, "Value", "Text"), new { @class = "form-control" })
                        </div>
                            <div class="col-md-4">
                                <label class="form-label">Meeting Date<span style="color: red">*</span></label>
                                @Html.TextBoxFor(f => f.MeetingDate, new { @class = "form-control form-control-lg mydatepicker", @Placeholder = "Meeting Date", @ReadOnly = "ReadOnly" })
                            </div>
                            <div class="col-md-4">
                                <label class="form-label"> Meeting Time <span style="color: red">*</span></label>
                                @Html.TextBoxFor(f => f.MeetingTime, new { @class = "form-control", @Placeholder = "Meeting Time" })
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Remark  <span style="color: red">*</span></label>
                                @Html.TextAreaFor(f => f.Remark, new { @class = "form-control form-control-lg mydatepicker", @Placeholder = "Description " })
                            </div>

                        </div>
                    <br />
                    <div class="row">
                        <div class="col-md-9">
                            @if (Model != null)
                            {
                                <input type="submit" value="Update " class="btn btn-success" name="btnUpdate" onclick="return validateservice();" />

                            }
                            else
                            {

                                <input type="submit" value="Save " class="btn btn-success" name="btnSave" onclick="return validateservice();" />

                              
                            }
                            <a href="/Lead/LeadMaster" class="btn btn-dark">Reset</a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <h5 class="mb-0">DWR Master Details</h5>
                        <form class="ms-auto position-relative">
                            <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-search"></i></div>
                            <input class="form-control ps-5" type="text" placeholder="search">
                        </form>
                    </div>
                    <div class="table-responsive mt-3">
                        <table class="table table-bordered">
                            <thead class="table-secondary">
                                <tr>
                                    <th>S.N</th>
                                    <th>Prospect Name</th>
                                    <th>Lead</th>
                                    <th>Next Followup Date</th>
                                    <th>Remark</th>
                                    <th>Business Chance</th>
                                    <th>Mode Of Interaction</th>
                                    <th>Executive Name</th>
                                    <th>Meeting Date And Time</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>
                                        <div class="d-flex align-items-center gap-3 cursor-pointer">
                                            <img src="assets/images/avatars/avatar-1.png" class="rounded-circle" width="44" height="44" alt="">
                                            <div class="">
                                                <p class="mb-0">Thomas Hardy</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>89 Chicago UK</td>
                                    <td>Chicago</td>
                                    <td>8574201</td>
                                    <td>United Kingdom</td>
                                    <td>Chicago</td>
                                    <td>8574201</td>
                                    <td>United Kingdom</td>
                                    <td>
                                        <div class="table-actions d-flex align-items-center gap-3 fs-6">
                                            <a href="javascript:;" class="text-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Views"><i class="bi bi-eye-fill"></i></a>
                                            <a href="javascript:;" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit"><i class="bi bi-pencil-fill"></i></a>
                                            <a href="javascript:;" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Delete"><i class="bi bi-trash-fill"></i></a>
                                        </div>
                                    </td>
                                </tr>

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

}