@model AfluexFollowUpDemo.Models.Procpect

@{
    ViewBag.Title = "GetProspecctList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h6 class="mb-0 text-uppercase">Get Prospect List</h6>
<hr />
<div class="card">
@using (Html.BeginForm("GetProspecctList", "Procpect", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{

    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <label class="form-label">Contact Person <span style="color: red">*</span></label>
                @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form-control", @Placeholder = "Enter Contact Person" })
               
            </div>
            <div class="col-md-3">
                <label class="form-label">Contact Number</label>
                @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control", @Placeholder = "Enter Contact Number" })
              
            </div>
            <div class="col-md-3">
                <label class="form-label">Company Name</label>
                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", @Placeholder = "Enter Company Name" })
            </div>
            <div class="col-md-3">
                <label class="form-label" style="margin-top: 37px;">&nbsp;</label>
                <input class="btn btn-info" type="submit" value="Get Details" name="GetDetails">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="table-responsive">
                <table id="example1" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Contact Person</th>
                            <th>Contact EmailID</th>
                            <th>Contact Number</th>
                            <th>Industry Category</th>
                            <th>Company Name</th>
                            <th>Company Contact Number</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            if (Model.lstProcpect != null)
                            {
                                foreach (var item in Model.lstProcpect)
                                {
                                    <tr>
                                         <td>@item.ContactPerson</td>
                                        <td>@item.ContactEmailId</td>
                                        <td>@item.ContactNo</td>
                                        <td>@item.Fk_IndustryCategoryId</td>
                                        <td>@item.CompanyName</td>
                                        <td>@item.CompanyContactNo</td>
                                        <td>@item.Address</td>
                                        <td>
                                            <a href="/Procpect/Procpect?Pk_ProcpectId=@item.Pk_ProcpectId" class="label label-primary">Edit</a>
                                            &nbsp;
                                            <a href="/Procpect/DeleteProspect?Pk_ProcpectId=@item.Pk_ProcpectId" onclick="return confirm('Sure you want to delete this Service ?');" class="label label-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
}
</div>

