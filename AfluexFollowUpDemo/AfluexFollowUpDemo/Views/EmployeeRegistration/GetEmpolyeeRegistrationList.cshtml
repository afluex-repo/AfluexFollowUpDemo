@model AfluexFollowUpDemo.Models.EmployeeRegistration
@{
    ViewBag.Title = "GetEmpolyeeRegistrationList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h6 class="mb-0 text-uppercase"> Empolyee Registration List</h6>
<hr />
<div class="card">
@using (Html.BeginForm("GetEmpolyeeRegistrationList", "EmployeeRegistration", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{

    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <label class="form-label">User Type Name @*<span style="color: red">*</span>*@</label>
                @Html.DropDownListFor(m => m.Fk_UserTypeId, new SelectList(ViewBag.ddlUserName, "Value", "Text"), new { @class = "form-select", })
                  @*@Html.TextBoxFor(m => m.Fk_UserTypeId, new { @class = "form-control", @Placeholder = "User Type" })*@
                
            </div>
            <div class="col-md-3">
                <label class="form-label">Employee Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @Placeholder = "Employee Name" })
            </div>
            <div class="col-md-3">
                <label class="form-label">Contact Number</label>
                @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control ", @Placeholder = "Contact Number" })
            </div>
            <div class="col-md-3">
                <label class="form-label" style="margin-top: 37px;" >&nbsp;</label>
                <input class="btn btn-info" type="submit" value="Get Details" name="GetDetails" >
            </div>
        </div>
        <br />
        <div class="row">
            <div class="table-responsive">
                <table id="example1" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>UserTypeName</th>
                            <th>Employee Name</th>
                            <th>Contact Number</th>
                            <th>Email ID</th>
                            <th>Address</th>
                            <th>Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            if (Model.lstemployee != null)
                            {
                                foreach (var item in Model.lstemployee)
                                {
                                    <tr>
                                        
                                        <td>@item.Fk_UserTypeId</td>
                                        <td>@item.Name</td>
                                        <td>@item.ContactNo</td>
                                        <td>@item.EmailId</td>
                                        <td>@item.Address</td>
                                        <td><img src="@item.UserImage" height="50" width="50" /></td>
                                        <td>
                                            <a href="/EmployeeRegistration/EmployeeRegistration?Pk_Id=@item.Pk_Id" class="label label-primary"><i class="bi bi-pencil-fill"></i>Edit</a>
                                            &nbsp;
                                            <a href="/EmployeeRegistration/DeleteEmployeeRegistration?Pk_Id=@item.Pk_Id" onclick="return confirm('Sure you want to delete this Service ?');" class="text-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
}
</div>

